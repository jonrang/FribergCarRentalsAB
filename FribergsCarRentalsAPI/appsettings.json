{
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=FribergCarRentalsAPI;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "JwtSettings": {
        "Issuer": "FribergsCarRentals", //bara ett namn på den som utfärdat
        "Audience": "FribergsCarRentalsClient",
        "DurationInMinutes": 15,
        "RefreshDurationInHours": 24
        // key hidden in manage user secrets
    },
    "RentalSettings": {
        "MinimumDrivingAge": 18,
        "CancellationCutoffHours": 48,
        "LateFeePerDayMultiplier": 1.5,
        "LateFeeGraceHours":  1
    },
    "AllowedHosts": "*"
}
