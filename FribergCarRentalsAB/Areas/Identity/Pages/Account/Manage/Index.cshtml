@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.FullName" class="form-control" placeholder="Please enter your full name" />
                <label asp-for="Input.FullName"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.DateOfBirth" type="date" class="form-control" placeholder="Please enter your date of birth" />
                <label asp-for="Input.DateOfBirth"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.DriverLicenseNumber" class="form-control" placeholder="Please enter your drivers license" />
                <label asp-for="Input.DriverLicenseNumber"></label>
                <span asp-validation-for="Input.DriverLicenseNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
        <hr />
        <div class="card border-warning mb-4 shadow-sm">
            <div class="card-header bg-warning text-dark">
                <i class="bi bi-shield-lock-fill me-1"></i>
                Admin-inställningar
            </div>
            <div class="card-body text-center">
                <form method="post" asp-page-handler="ToggleAdmin">
                    @if (User.IsInRole("Admin"))
                    {
                        <button type="submit"
                                class="btn btn-danger btn-lg w-100">
                            <i class="bi bi-person-dash-fill me-1"></i>
                            Demote me to User
                        </button>
                    }
                    else
                    {
                        <button type="submit"
                                class="btn btn-warning btn-lg w-100">
                            <i class="bi bi-person-plus-fill me-1"></i>
                            Promote me to Admin
                        </button>
                    }
                </form>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
