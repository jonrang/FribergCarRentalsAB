@model CarCreateViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ny bil";
}

@section HeadContent {
    <!-- Bootstrap Icons for form hints -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}

<div class="container-fluid py-4">
    <div class="card shadow-sm mx-auto" style="max-width: 800px;">
        <div class="card-header bg-primary text-light">
            <h3 class="mb-0"><i class="bi bi-plus-lg me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-area="Admin"
                  asp-controller="CarAdmin"
                  asp-action="Create"
                  enctype="multipart/form-data"
                  class="needs-validation"
                  novalidate>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Make" class="form-label">Märke</label>
                        <input asp-for="Make" class="form-control" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label">Modell</label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Year" class="form-label">År</label>
                        <input asp-for="Year" type="number" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="LicensePlate" class="form-label">Registreringsnr</label>
                        <input asp-for="LicensePlate" class="form-control text-uppercase" />
                        <span asp-validation-for="LicensePlate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Mileage" class="form-label">Miltal (km)</label>
                        <input asp-for="Mileage" type="number" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RatePerDay" class="form-label">Pris per dag</label>
                        <div class="input-group">
                            <span class="input-group-text">kr</span>
                            <input asp-for="RatePerDay" type="number" step="0.01" class="form-control" />
                        </div>
                        <span asp-validation-for="RatePerDay" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ImageUpload" class="form-label">Ladda upp bild</label>
                        <input asp-for="ImageUpload" type="file" class="form-control" />
                        <span asp-validation-for="ImageUpload" class="text-danger"></span>
                    </div>

                    @if (Model.ExistingImages?.Any() == true)
                    {
                        <div class="col-md-6">
                            <label asp-for="SelectedImageFileName" class="form-label">
                                Välj befintlig bild
                            </label>
                            <select asp-for="SelectedImageFileName"
                                    class="form-select"
                                    asp-items="Model.ExistingImages">
                                <option value="">— ingen —</option>
                            </select>
                        </div>
                    }
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <a asp-area="Admin"
                       asp-controller="CarAdmin"
                       asp-action="Index"
                       class="btn btn-outline-secondary me-2">
                        Avbryt
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Spara bil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap custom validation
        (function () {
          'use strict';
          var forms = document.querySelectorAll('.needs-validation');
          Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (e) {
              if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
              }
              form.classList.add('was-validated');
            }, false);
          });
        })();
    </script>
}