@model IEnumerable<FribergCarRentalsAB.Models.Car>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Hantera bilar";
}

@section HeadContent {
    <!-- if you haven’t already added icons globally, include them here: -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">@ViewData["Title"]</h1>
        <a asp-area="Admin"
           asp-controller="CarAdmin"
           asp-action="Create"
           class="btn btn-sm btn-success">
            <i class="bi bi-plus-lg"></i> Ny bil
        </a>
    </div>

    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;"></th>
                        <th>Modell</th>
                        <th>År</th>
                        <th>Registreringsnr</th>
                        <th>Pris/dag</th>
                        <th>Tillgänglig</th>
                        <th style="width: 140px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/images/cars/@c.ImageFileName"
                                     class="img-thumbnail"
                                     style="max-height: 60px;"
                                     alt="@($"{c.Make} {c.Model}")" />
                            </td>
                            <td>@c.Make @c.Model</td>
                            <td>@c.Year</td>
                            <td>@c.LicensePlate</td>
                            <td>@c.RatePerDay.ToString("C")</td>
                            <td>
                                @if (c.IsAvailable)
                                {
                                    <span class="badge bg-success">Ja</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Nej</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-area="Admin"
                                   asp-controller="CarAdmin"
                                   asp-action="Edit"
                                   asp-route-id="@c.Id"
                                   class="btn btn-sm btn-outline-primary me-1"
                                   title="Redigera">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-area="Admin"
                                      asp-controller="CarAdmin"
                                      asp-action="Delete"
                                      asp-route-id="@c.Id"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Radera bilen?');">
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger"
                                            title="Radera">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

